<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="msgcopy.com.androiddemo.MainActivity">


    <Button
        android:id="@+id/updateUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="onClick"
        android:text="更新UI" />

    <Button
        android:id="@+id/byValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/updateUI"
        android:onClick="onClick"
        android:text="传值" />

    <Button
        android:id="@+id/limb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/byValue"
        android:onClick="onClick"
        android:text="导航栏" />

    <Button
        android:id="@+id/permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/limb"
        android:onClick="onClick"
        android:text="权限管理" />

    <Button
        android:id="@+id/snackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/permission"
        android:onClick="onClick"
        android:text="Snackbar" />

    <Button
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snackbar"
        android:onClick="onClick"
        android:text="ListView上拉加载下拉刷新" />

    <Button
        android:id="@+id/polling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/permission"
        android:layout_alignRight="@+id/permission"
        android:layout_below="@+id/listView"
        android:onClick="onClick"
        android:text="消息轮询" />

    <Button
        android:id="@+id/observer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/snackbar"
        android:layout_alignRight="@+id/snackbar"
        android:layout_below="@+id/polling"
        android:onClick="onClick"
        android:text="观察者模式" />

    <Button
        android:id="@+id/threadpool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/updateUI"
        android:layout_toRightOf="@+id/updateUI"
        android:onClick="onClick"
        android:text="线程池" />

    <Button
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/threadpool"
        android:layout_toEndOf="@+id/byValue"
        android:layout_toRightOf="@+id/byValue"
        android:onClick="onClick"
        android:text="下载apk" />

</RelativeLayout>
